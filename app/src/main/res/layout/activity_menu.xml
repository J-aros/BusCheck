        android:text="Consultar Datos"
        android:textColor="@color/bottom"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@+id/opDosview"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/proxbold"
        android:text="Historial Venta"
        android:textColor="@color/bottom"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@+id/opCuatroview"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/proxbold"
        android:text="Formularios"
        android:textColor="@color/bottom"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@+id/opTresview"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="156dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Administra de manera simple las ventas de boleto "
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/opUnoview"
        app:layout_constraintStart_toStartOf="@+id/opUnoview" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="152dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="20dp"
        android:text="Observa en detalle datos de otros buses y viajes asociados"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/opDosview"
        app:layout_constraintStart_toStartOf="@+id/opDosview" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="138dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Informáte sobre el historial de tus ventas"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/opCuatroview"
        app:layout_constraintStart_toStartOf="@+id/opCuatroview" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="144dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:text="Redacta rápidas observaciones y reclamos"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/opTresview"
        app:layout_constraintStart_toStartOf="@+id/opTresview" />

