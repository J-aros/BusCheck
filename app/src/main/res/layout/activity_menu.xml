        android:id="@+id/imageView4"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/opUnoview"
        app:layout_constraintTop_toTopOf="@+id/opUnoview"
        app:srcCompat="@drawable/commerce" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/opDosview"
        app:layout_constraintTop_toTopOf="@+id/opDosview"
        app:srcCompat="@drawable/research" />

</android.support.constraint.ConstraintLayout>