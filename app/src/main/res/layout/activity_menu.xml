    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="29dp"
        android:layout_height="21dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/opTresview"
        app:layout_constraintTop_toTopOf="@+id/opTresview"
        app:srcCompat="@drawable/right" />

    <View
        android:id="@+id/view3"
        android:layout_width="395dp"
        android:layout_height="233dp"
        android:background="@drawable/view_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="393dp"
        android:layout_height="267dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:srcCompat="@drawable/gente" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="37dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/opTresview"
        app:layout_constraintTop_toTopOf="@+id/opTresview"
        app:srcCompat="@drawable/form" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/proxbold"
        android:text="Venta Boletos"
        android:textColor="@color/bottom"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@+id/opUnoview"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
