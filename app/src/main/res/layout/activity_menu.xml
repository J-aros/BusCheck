<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/menu"
    tools:context=".MenuActivity">

    <View
        android:id="@+id/opUnoview"
        android:layout_width="169dp"
        android:layout_height="155dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="372dp"
        android:background="@drawable/view_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/opDosview"
        android:layout_width="169dp"
        android:layout_height="155dp"
        android:layout_marginTop="372dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/view_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/opTresview"
        android:layout_width="169dp"
        android:layout_height="155dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/view_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opDosview" />

    <View
        android:id="@+id/opCuatroview"
        android:layout_width="169dp"
        android:layout_height="155dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/view_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opUnoview" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="38dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/opCuatroview"
        app:layout_constraintTop_toTopOf="@+id/opCuatroview"
        app:srcCompat="@drawable/files" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="29dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/opDosview"
        app:layout_constraintTop_toTopOf="@+id/opDosview"
        app:srcCompat="@drawable/right" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="29dp"
        android:layout_height="21dp"
